{{!< default}}
{{#post}} 
<!-- Portfolio Cover Part -->
<div class="page-cover {{^if feature_image}}no-image{{/if}}" {{#if feature_image}}style="background-image: url({{feature_image}})" {{/if}}>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-cover-text">
                    <h2>{{title}}</h2>
                    <p>{{excerpt}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Author list -->
<div class="authors-section">
    <div class="container">
        <div class="row justify-content-center">
            {{#get 'users' limit="all" include="count.posts,posts"}}
            {{#foreach users}}
            <div class="col-lg-4 col-md-6">
                <div class="author-block">
                    <a href="{{url}}" class="author-img"><img src="{{profile_image}}" alt="{{name}}"></a>
                    <div class="overlay-content">
                        <div class="d-flex justify-content-between">
                            <div class="left">
                                <a href="{{url}}" class="author-name">{{name}}</a>
                                <p class="count-articles">{{plural count.posts empty="no article" singular="1 article" plural="% articles"}}</p>
                            </div>
                            <div class="right">
                                <ul class="author-social">
                                    {{#if facebook}}
                                    <li><a href="{{facebook_url}}" target="_blank"><i class="social_facebook"></i></a></li>
                                    {{/if}} 
                                    {{#if twitter}}
                                    <li><a href="{{facebook_url}}" target="_blank"><i class="social_twitter"></i></a></li>
                                    {{/if}}
                                     {{#if website}}
                                    <li><a href="{{website}}" target="_blank"><i class="icon_globe-2"></i></a></li>
                                    {{/if}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/foreach}}
            {{/get}}
        </div>
    </div>
</div>


<div class="content-footer-wrapper">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">
                <h1 class="msg">Thanks for reading this whole articlse. <br>
                Get the latest posts delivered right to your inbox</h1> 
                
                {{> 'subscribe' }}
            </div>
        </div>
    </div>
</div>
{{/post}}